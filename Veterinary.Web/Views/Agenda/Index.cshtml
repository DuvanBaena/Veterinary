@model IEnumerable<Veterinary.Web.Data.Entities.Agenda>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Owners/Index">Inicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Html.DisplayNameFor(model => model.Date)</li>
        </ol>
    </nav>

<p>
    @*<a asp-action="Create" class="btn btn-primary">Create New</a>*@
    @*<a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus-square"></i> Create New</a>*@
    <button class="btn btn-primary btn-lg btn-responsive"  id="search" title="Create"> <i class="fa fa-plus-square"></i></button>
</p>



<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive table-image">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th> @Html.DisplayNameFor(model => model.Remarks)</th>
                        <th> @Html.DisplayNameFor(model => model.IsAvailable)</th>
                        <th> Opcion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Remarks)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                            <td class="text-center">
                                <button class="btn btn-warning" id="EditItem"  title="Edit"><i class="fa fa-edit"></i></button>
                                <button class="btn btn-info" id="DetailsItem"  title="Detail"><i class="fa fa-search-plus"></i></button>
                                <button class="btn btn-danger " title="Delete" id="DeleteItem"  data-toggle="modal" data-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#dataTable').DataTable({
                    "scrollY": "600px",
                    "scrollCollapse": true,
                    "paging": true
                });
            });
        </script>
    }
}
