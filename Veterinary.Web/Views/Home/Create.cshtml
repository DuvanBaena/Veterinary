@model Veterinary.Web.Models.PetViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="advanced-search-form">
    <form asp-action="Create" enctype="multipart/form-data" id="FrmHomeCreate" name="FrmHomeCreate">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OwnerId" />
        <div class="form-group">
            <label asp-for="Name" class="control-label" Name="Name"></label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Nombre de la Mascota" />
        </div>

        <div class="form-group">
            <label asp-for="PetTypeId" class="control-label"></label>
            <select asp-for="PetTypeId" asp-items="Model.PetTypes" id="PetTypeId" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="PetSexId" class="control-label"></label>
            <select asp-for="PetSexId" asp-items="Model.PetSexs" id="PetSexId" class="form-control"></select>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Race" class="control-label"></label>
            <select asp-for="PetRaceId" asp-items="Model.PetRaces" class="form-control" id=""></select>
            <span asp-validation-for="Race" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Remarks" class="control-label"></label>
            <textarea asp-for="Remarks" class="form-control"></textarea>
            <span asp-validation-for="Remarks" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Born" class="control-label"></label>
            <div class="input-group mb-2">
                <input asp-for="Born" type="search" class="form-control" id="datepicker">
                <div class="input-group-prepend  date">
                    <span class="input-group-text"> <span class="fa fa-calendar"></span></span>
                </div>
                <span asp-validation-for="Born" class="text-danger"></span>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="text-center">
            <button type="submit" class="btn btn-info btn-lg btn-responsive" onclick="HomeCreateMypet()" title="Create"><i class="fa fa-plus-square"></i></button>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/site.js"></script>
    <script>
        $('#datepicker').datepicker({
            format: 'yyyy/mm/dd',
            weekStart: 1,
            daysOfWeekHighlighted: "6,0",
            autoclose: true,
            todayHighlight: true,
        });
    </script>
}


