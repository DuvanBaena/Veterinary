@model Veterinary.Web.Models.PetViewModel
@{
    ViewData["Title"] = "AddPet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="advanced-search-form">
    <form asp-action="AddPet" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OwnerId" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Nombre de la Mascosta" />
           
        </div>

        <div class="form-group">
            <label asp-for="Race" class="control-label"></label>
            <input asp-for="Race" class="form-control" placeholder="Raza de la Mascosta" />
        </div>

        <div class="form-group">
            <label asp-for="Born" class="control-label"></label>
            <input asp-for="Born" class="form-control" id="Born" />          
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" />
        </div>

        <div class="form-group">
            <label asp-for="PetTypeId" class="control-label"></label>
            <select asp-for="PetTypeId" asp-items="Model.PetTypes" class="form-control" id="PetTypeId"></select>          
        </div>

        <div class="form-group">
            <label asp-for="Remarks" class="control-label"></label>
            <textarea asp-for="Remarks" class="form-control"></textarea>
        </div>

        <div class="clearfix"></div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg btn-responsive" onclick="CreateAddPet()" title="Create" id=""><i class="fa fa-plus"></i></button>
            <button type="submit" class="btn btn-success btn-lg btn-responsive" onclick="OwnerDetailItem(@Model.OwnerId)" title="Return" id=""> <i class="fa fa-undo"></i></button>           
        </div>
    </form>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/site.js"></script>
    }
}