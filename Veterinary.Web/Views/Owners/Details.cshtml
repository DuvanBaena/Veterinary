@model Veterinary.Web.Data.Entities.Owner

@{
    ViewData["Title"] = "Details";
}

<div>

    <hr />
    <form>
        <fieldset disabled>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAddress2">@Html.DisplayNameFor(model => model.User.FirstName)</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.User.FirstName)">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputAddress2">@Html.DisplayNameFor(model => model.User.LastName)</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.User.LastName)">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputAddress2">@Html.DisplayNameFor(model => model.User.PhoneNumber)</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.User.PhoneNumber)">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAddress2">@Html.DisplayNameFor(model => model.User.Address)</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.User.Address)">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputAddress2">@Html.DisplayNameFor(model => model.User.Email)</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.User.Email)">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputAddress2">Nro Pets</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value=" @Html.DisplayFor(model => model.Pets.Count)">
                </div>
            </div>
            @*<div class="form-group">
                    <label for="inputAddress">Address</label>
                    <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
                </div>*@
        </fieldset>
    </form>
</div>

<div class="form-group">
    <div id="BtnRight">        
        <button data-id="@Model.Id" class="btn btn-warning EditOwnerItem" title="Edit"><i class="fa fa-edit"></i></button>
        <button data-id="@Model.Id" class="btn btn-primary AddpetItem" title="Create"><i class="fa fa-plus"></i></button>
        <button class="btn btn-success IndexOwnerItem" title="Return"><i class="fa fa-undo"></i></button>
    </div>
</div>


@if (Model.Pets.Count == 0)
{
    <h4>Not Pets Added yet</h4>

}
else
{
    <table class="table table-hover table table-sm ">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Race)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().PetType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().BornLocal)
                </th>
                <th>
                    # Histories
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pets.FirstOrDefault().Remarks)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Pets)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@Url.Content(item.ImageUrl)" alt="Image" class="rounded-circle float-left" style="width:200px" />
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Race)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PetType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BornLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Histories.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        <button data-id="@item.Id" class="btn btn-warning EditItem" title="Edit"><i class="fa fa-edit"></i></button>
                        <a asp-action="DetailsPet" asp-route-id="@item.Id" class="btn btn-info" title="Detail"><i class="fa fa-search-plus"></i></a>
                        <button data-id="@item.Id" class="btn btn-danger deleteItem" title="Delete" data-toggle="modal" data-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $(document).ready(function () {
            // Delete item
            var item_to_delete;
            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });
            $("#btnYesDelete").click(function () {
                window.location.href = '/Owners/DeletePet/' + item_to_delete;
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            // EditPet item
            var item_to_Edit;
            $('.EditItem').click((e) => {
                item_to_Edit = e.currentTarget.dataset.id;
                window.location.href = '/Owners/EditPet/' + item_to_Edit;
            });
        });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            // EditOwner item
            var item_to_EditOwner;
            $('.EditOwnerItem').click((e) => {
                item_to_EditOwner = e.currentTarget.dataset.id;
                window.location.href = '/Owners/Edit/' + item_to_EditOwner;
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            // AddPet item
            var item_to_Addpet;
            $('.AddpetItem').click((e) => {
                item_to_Addpet = e.currentTarget.dataset.id;
                window.location.href = '/Owners/AddPet/' + item_to_Addpet;
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            // Return Index           
            $('.IndexOwnerItem').click((e) => {               
                window.location.href = '/Owners/Index/';
            });
        });
    </script>
}



