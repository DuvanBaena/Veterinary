@model Veterinary.Web.Models.PetViewModel

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" id="Name" placeholder="Nombre de la Mascosta" />
</div>

<div class="form-group">
    <label asp-for="PetSexId" class="control-label"></label>
    <select asp-for="PetSexId" asp-items="Model.PetSexs" class="form-control" id="PetTypeId"></select>
</div>

<div class="form-group">
    <label asp-for="Born" class="control-label"></label>
    <div class="input-group mb-2">
        <input asp-for="Born" type="search" class="form-control" id="datepicker">
        <div class="input-group-prepend">
            <div class="input-group-text"><span class="fa fa-calendar"></span></div>
        </div>
    </div>
</div>

<div class="form-group">
    <label asp-for="Age" class="control-label">Años</label>
    <input asp-for="Age" class="form-control" placeholder="Años" />
</div>

<div class="form-group">
    <label asp-for="Reproductive" class="control-label">E Reproductivo</label>
    <input asp-for="Reproductive" class="form-control" placeholder="E Reproductivo" />
</div>

<div class="form-group">
    <label asp-for="PetTypeId" class="control-label"></label>
    <select asp-for="PetTypeId" asp-items="Model.PetTypes" class="form-control" id="PetTypeId"></select>
</div>

<div class="form-group">
    <label asp-for="Food" for="inputName" class="control-label">Alimentación</label>
    <input asp-for="Food" class="form-control" placeholder="Alimentación" />
</div>

<div class="form-group">
    <label asp-for="Color" for="inputName" class="control-label">Color</label>
    <input asp-for="Color" class="form-control" placeholder="Color" />
</div>

<div class="form-group">
    <label asp-for="PetRaceId" class="control-label"></label>
    <select asp-for="PetRaceId" asp-items="Model.PetRaces" class="form-control" id=""></select>
</div>

<div class="form-group">
    <label asp-for="Frequency" for="inputName" class="control-label">Frecuencia</label>
    <input asp-for="Frequency" class="form-control" placeholder="Frecuencia" />
</div>

<div class="form-group">
    <label asp-for="ImageFile" class="control-label"></label>
    <input asp-for="ImageFile" class="form-control" type="file" />
</div>

<div class="form-group">
    <label asp-for="Remarks" class="control-label"></label>
    <textarea asp-for="Remarks" class="form-control"></textarea>
</div>