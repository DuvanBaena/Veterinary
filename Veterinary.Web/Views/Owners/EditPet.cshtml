@model Veterinary.Web.Models.PetViewModel
@{
    ViewData["Title"] = "EditPet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container" id="advanced-search-form">
    <form asp-action="EditPet" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="OwnerId" />
        <input type="hidden" asp-for="ImageUrl" />

        <div class="col-12 col-md-12 text-center">

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="width:300px;height:300px;max-height: 100%; width: auto;" />

            }
        </div>

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Nombre de la Mascosta" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Race" class="control-label"></label>
            <select asp-for="PetRaceId" asp-items="Model.PetRaces" class="form-control" id="PetTypeId"></select>
            <span asp-validation-for="Race" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Born" class="control-label"></label>
            <div class="input-group mb-2">
                <input asp-for="Born" type="search" class="form-control" id="datepicker">
                <div class="input-group-prepend  date">
                    <span class="input-group-text"> <span class="fa fa-calendar"></span></span>
                </div>
                <span asp-validation-for="Born" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ImageFile" class="control-label"></label>
            <input asp-for="ImageFile" class="form-control" type="file" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PetTypeId" class="control-label"></label>
            <select asp-for="PetTypeId" asp-items="Model.PetTypes" class="form-control" id="PetTypeId"></select>
            <span asp-validation-for="PetTypeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PetSexId" class="control-label"></label>
            <select asp-for="PetSexId" asp-items="Model.PetSexs" class="form-control"></select>
            <span asp-validation-for="PetSexId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Remarks" class="control-label"></label>
            <textarea asp-for="Remarks" class="form-control"></textarea>
        </div>

        <div class="clearfix"></div>
        <div class="text-center">
            <button type="submit" class="btn btn-warning btn-lg btn-responsive" onclick="CreateAddPet(@Model.OwnerId)" title="Edit"><i class="fa fa-save"></i></button>
            

        </div>
    </form>
</div>

@section scripts{
    <script type="text/javascript" src="~/js/site.js"></script>
    <script>
        $('#datepicker').datepicker({
            format: 'yyyy/mm/dd',
            weekStart: 1,
            daysOfWeekHighlighted: "6,0",
            autoclose: true,
            todayHighlight: true,
        });
    </script>
}





