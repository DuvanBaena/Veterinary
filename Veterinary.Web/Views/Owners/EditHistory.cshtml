@model Veterinary.Web.Models.HistoryViewModel
@{
    ViewData["Title"] = "EditHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="advanced-search-form">
    <div>
        <form asp-action="EditHistory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PetId" />
            <input type="hidden" asp-for="Id" />

            <partial name="_History" />


            <div class="clearfix"></div>
            <div class="text-center">       
                <button type="submit" class="btn btn-warning btn-lg btn-responsive" onclick=EditOwnerItems() title="Edit"> <i class="fa fa-save"></i></button>
                <button type="submit" class="btn btn-success btn-lg btn-responsive" onclick=DetailPetItem(@Model.PetId) title="Return"><i class="fa fa-undo"></i></button>
            </div>


        </form>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/site.js"></script>
      }
}