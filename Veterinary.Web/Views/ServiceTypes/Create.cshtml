@model Veterinary.Web.Data.Entities.ServiceType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div >
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Creación de Tipos de Servicio</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive table-image">
                    <form asp-action="Create">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th class="text-center"> @Html.DisplayNameFor(model => model.Name)</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tr>
                                <td class="text-center">
                                    <input asp-for="Name" class="form-control" id="texto" />
                                    @*<span asp-validation-for="Name" class="text-danger"></span>*@
                                </td>
                                <td class="text-center">                                    
                                    <button type="submit" class="btn btn-primary  btn-responsive" title="Create"> <i class="fa fa-plus"></i> </button>
                                    <button type="button" class="btn btn-success  btn-responsive" title="Return" onclick="ServiceTypesIndex()"> <i class="fa fa-undo"></i></button>
                                </td>
                            </tr>
                            <tbody>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>


@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/site.js"></script>
    }
}