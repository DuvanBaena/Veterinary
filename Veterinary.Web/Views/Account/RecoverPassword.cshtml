@model Veterinary.Web.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "RecoverPassword";
    Layout = "~/Views/Shared/_LoginWeb.cshtml";
}

<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form method="post">
            <h1>Recuperar contraseña</h1>
            <input asp-for="Email" placeholder="Email" />
            <span asp-validation-for="Email" class="text-warning"></span>
            <button type="submit" value="Login">Recuperar Contraseña</button>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">-</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>
                    Para conectarse con nosotros inicia sessión por favor!
                </p>
                <button class="ghost" id="signUp">Ir al inicio de sessión</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/site.js"></script>

        <script type="text/javascript">
            const signUpButton = document.getElementById('signUp');          

            signUpButton.addEventListener('click', () => {
                container.classList.add("right-panel-active");
                let url = "/";
                window.location.href = url;
            });

        </script>

    }


}



