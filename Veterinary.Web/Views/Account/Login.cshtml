@model Veterinary.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginWeb.cshtml";
}


<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Crea una cuenta con nosotros</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa fa-twitter"></i></a>
                <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
            </div>
            <button asp-action="Register">Registro</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <h1>Mercamascotas</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa fa-twitter"></i></a>
                <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
            </div>
            <span>Usa tu cuenta </span>
            <input asp-for="Username" placeholder="Correo electrónico" />
            <span asp-validation-for="Username" class="text-warning"></span>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <input asp-for="Password" type="password" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-warning"></span>
            <div class="RememberMe">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label asp-for="RememberMe">Recuérdame?</label>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
           <a asp-action="RecoverPassword">Recordar Contraseña?</a>
            <button type="submit" value="Login">Iniciar Sessión</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Bienvenido de nuevo!</h1>
                <p>
                    Para  Conectarse con nosotros por favor ingresa tus datos de registro!                
                </p>
                <button class="ghost" id="signIn">Ir</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hola, Amigo!</h1>
                <p>Te invitamos si aún no estas registrado a que lo hagas, para que inicies una relación con nosotros!</p>
                <button class="ghost" id="signUp">Ir</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");    
       <script src="~/js/site.js"></script> 
        <script type="text/javascript">
            const signUpButton = document.getElementById('signUp');
            const signInButton = document.getElementById('signIn');
            const container = document.getElementById('container');

            signUpButton.addEventListener("click", function () {
                  container.classList.add("right-panel-active");      
            });
            
            signInButton.addEventListener('click', () => {
                container.classList.remove("right-panel-active");                  
            });
        </script>    
        
     }


 }




