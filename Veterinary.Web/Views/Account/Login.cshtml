@model Veterinary.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginWeb.cshtml";
}


<div class="container" id="container">
    <div class="form-container sign-up-container">
        <form action="#">
            <h1>Create Account</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa fa-twitter"></i></a>
                <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
            </div>
            <span>or use your email for registration</span>
            <input type="text" placeholder="Name" />
            <input type="email" placeholder="Email" />
            <input type="password" placeholder="Password" />
            <button>Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <h1>Mercamascotas</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="fa fa-facebook-f"></i></a>
                <a href="#" class="social"><i class="fa fa-twitter"></i></a>
                <a href="#" class="social"><i class="fa fa-linkedin"></i></a>
            </div>
            <span>or use your account</span>
            <input asp-for="Username" placeholder="Email" />
            <span asp-validation-for="Username" class="text-warning"></span>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <input asp-for="Password" type="password" placeholder="Password" />
            <span asp-validation-for="Password" class="text-warning"></span>
            <div class="RememberMe">
                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                <label asp-for="RememberMe">Remember Me?</label>
                <span asp-validation-for="RememberMe" class="text-warning"></span>
            </div>
            <a href="#">Forgot your password?</a>
            <button type="submit" value="Login">Sign In</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>
                    Enter your personal data and start a relationship with us
                </p>
                <button class="ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script type="text/javascript">
                    const signUpButton = document.getElementById('signUp');
                    const signInButton = document.getElementById('signIn');
                    const container = document.getElementById('container');

                      signUpButton.addEventListener('click', () => {
                        container.classList.add("right-panel-active");
                        });

                      signInButton.addEventListener('click', () => {
                        container.classList.remove("right-panel-active");
                        });
            </script>
        }
    }




