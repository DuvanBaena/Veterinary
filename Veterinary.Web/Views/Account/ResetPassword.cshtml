@model Veterinary.Web.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_LoginWeb.cshtml";
}

<div class="container" id="container">


    <button>Sign Up</button>

    <div class="form-container sign-in-container">
        <form method="post">
            <h1>Recuperar contraseña</h1>
            <input type="hidden" asp-for="Token" />
            <input asp-for="UserName" type="text" placeholder="Correo Electrónico" />
            <span asp-validation-for="UserName" class="text-warning"></span>
            <input asp-for="Password" type="password" placeholder="Contraseña" />
            <span asp-validation-for="Password" class="text-warning"></span>
            <input asp-for="ConfirmPassword" type="password" placeholder="Confirmar Contraseña" />
            <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
            <button type="submit">Cambiar Password</button>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="text-success">
                <p>
                    @ViewBag.Message
                </p>
            </div>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">-</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>
                    Para conectarse con nosotros inicia sessión por favor!
                </p>
                <button class="ghost" id="signUp">Ir al inicio de sessión</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/js/site.js"></script>

        <script type="text/javascript">
            const signUpButton = document.getElementById('signUp');

            signUpButton.addEventListener('click', () => {
                container.classList.add("right-panel-active");
                let url = "/";
                window.location.href = url;
            });

        </script>

    }


}
