@model IEnumerable<Veterinary.Web.Data.Entities.Pet>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Pets/Index">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Html.DisplayNameFor(model => model.Name)</li>
    </ol>
</nav>
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive table-image">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Owner</th>
                        <th> @Html.DisplayNameFor(model => model.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.PetType.Name)</th>
                        <th> @Html.DisplayNameFor(model => model.ImageUrl)</th>
                        <th> @Html.DisplayNameFor(model => model.Race)</th>
                        <th> @Html.DisplayNameFor(model => model.Born)</th>
                        <th> # Histories</th>
                        <th class="text-center"> Opcion</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Owner.User.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.PetType.Name)</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@Url.Content(item.ImageUrl)" alt="Image" />
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Race)</td>
                        <td>@Html.DisplayFor(modelItem => item.Born)</td>
                        <td>@Html.DisplayFor(modelItem => item.Histories.Count)</td>
                        <td class="text-center">
                            <button class="btn btn-warning" title="Edit" onclick="EditPetsItem(@item.Id)"><i class="fa fa-edit"></i></button>
                            <button class="btn btn-info" id="DetailsItem" title="Detail" onclick="DetailPetsItem(@item.Id)"><i class="fa fa-search-plus"></i></button>
                            <button class="btn btn-danger" title="Delete" id="DeleteItem" onclick="PetDeleteIndex(@item.Id)" data-toggle="modal" data-target="#deleteDialog"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/site.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#dataTable').DataTable({
                    "scrollY": "600px",
                    "scrollCollapse": true,
                    "paging": true
                });
            });
        </script>
    }
}